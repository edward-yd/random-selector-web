<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>随机选择器</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }
        .container {
            background-color: #f5f5f5;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #45a049;
        }
        #result {
            font-size: 24px;
            margin: 20px;
            padding: 15px;
            background-color: #fff;
            border-radius: 5px;
            min-height: 30px;
        }
        #fileContent {
            display: none;
            margin-top: 20px;
            text-align: left;
            background-color: #fff;
            padding: 10px;
            border-radius: 5px;
            max-height: 200px;
            overflow-y: auto;
        }
        .reset-btn {
            background-color: #f44336;
        }
        .reset-btn:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>随机选择器</h1>
        
        <input type="file" id="fileInput" accept=".txt">
        <p>请上传一个文本文件，每行一个选项</p>
        
        <div id="fileContent"></div>
        
        <button id="selectBtn" disabled>随机选择</button>
        <button id="resetBtn" class="reset-btn" disabled>重新开始</button>
        
        <div id="result"></div>
    </div>

    <script>
        const fileInput = document.getElementById('fileInput');
        const selectBtn = document.getElementById('selectBtn');
        const resetBtn = document.getElementById('resetBtn');
        const resultDiv = document.getElementById('result');
        const fileContentDiv = document.getElementById('fileContent');
        
        let options = [];
        
        fileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                const content = e.target.result;
                options = content.split('\n').filter(option => option.trim() !== '');
                
                if (options.length > 0) {
                    fileContentDiv.textContent = `已加载 ${options.length} 个选项`;
                    fileContentDiv.style.display = 'block';
                    selectBtn.disabled = false;
                    resetBtn.disabled = false;
                    resultDiv.textContent = '';
                } else {
                    fileContentDiv.textContent = '文件内容为空或格式不正确';
                    fileContentDiv.style.display = 'block';
                    selectBtn.disabled = true;
                }
            };
            reader.readAsText(file);
        });
        
        selectBtn.addEventListener('click', function() {
            if (options.length === 0) return;
            
            const randomIndex = Math.floor(Math.random() * options.length);
            resultDiv.textContent = options[randomIndex];
        });
        
        resetBtn.addEventListener('click', function() {
            fileInput.value = '';
            options = [];
            fileContentDiv.style.display = 'none';
            resultDiv.textContent = '';
            selectBtn.disabled = true;
            resetBtn.disabled = true;
        });
    </script>
</body>
</html>
